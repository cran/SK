citHeader("To cite SK Package in publications use:")

year <- sub("-.*", "", meta$Date)
note <- sprintf("R package version %s", meta$Version)

bibentry(
bibtype="Manual",
title="{SK}: Segment-Based Ordinary Kriging and Segment-Based Regression Kriging for Spatial Prediction",
author="Yongze Song",
year=year,
note=note)

bibentry(
bibtype="Article",
title="Traffic Volume Prediction With Segment-Based Regression Kriging and its Implementation in Assessing the Impact of Heavy Vehicles",
author="Song, Yongze and Wang, Xiangyu and Wright, Graeme and Thatcher, Dominique and Wu, Peng and Felix, Pascal",
journal="IEEE Transactions on Intelligent Transportation Systems",
year="2018",
publisher="IEEE",
doi="10.1109/TITS.2018.2805817")

bibentry(
bibtype="Article",
title="Spatial and temporal variations of spatial population accessibility to public hospitals: a case study of rural--urban comparison",
